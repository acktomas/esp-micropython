{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "mpremote: Connect and Show Info",
            "type": "shell",
            "command": "mpremote",
            "args": ["connect", "list"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Check Connection Status",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "import serial.tools.list_ports; ports = list(serial.tools.list_ports.comports()); print(f'Found {len(ports)} serial port(s):'); [print(f'  {p.device} - {p.description}') for p in ports]"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Disconnect Current Device",
            "type": "shell",
            "command": "mpremote",
            "args": ["disconnect"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Force Disconnect All",
            "type": "shell",
            "command": "python",
            "args": [
                "-c",
                "import subprocess, os, signal, psutil; processes = [p for p in psutil.process_iter(['name']) if 'mpremote' in p.info['name'].lower()]; [p.terminate() for p in processes]; print(f'Terminated {len(processes)} mpremote processes')"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Upload Current File",
            "type": "shell",
            "command": "mpremote",
            "args": ["fs", "cp", "${file}", ":"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Upload and Run Current File",
            "type": "shell",
            "command": "mpremote",
            "args": ["run", "${file}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Soft Reset",
            "type": "shell",
            "command": "mpremote",
            "args": ["reset"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "mpremote: Open REPL",
            "type": "shell",
            "command": "mpremote",
            "args": ["repl"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "mpremote: Complete Development Cycle",
            "dependsOrder": "sequence",
            "dependsOn": [
                "mpremote: Disconnect Current Device",
                "mpremote: Upload Current File",
                "mpremote: Soft Reset",
                "mpremote: Open REPL"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
